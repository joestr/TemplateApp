@model TemplateApp.Presentation.Web.ViewModels.Shared.PartialDialog
@{
    Layout = null;
}

<dialog @{ WriteLiteral(!string.IsNullOrEmpty(Model.OpenedDialog) ? "open" : ""); }>
    <div>
        <h5>@Model.Title</h5>
        <div>
            @await Html.PartialAsync("_PartialDialogContent", @Model.Content)
        </div>
    </div>
    <form method="get" action="">
        @foreach (var entry in Model.HiddenInputNameAndValues)
        {
            <input type="hidden" name="@entry.Key" value="@entry.Value"/>
        }
        <input type="submit" name="@Model.Identifier@nameof(Model.OpenedDialog)" value=""/>
    </form>
</dialog>