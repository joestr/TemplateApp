@model TemplateApp.Presentation.Web.ViewModels.Shared.PartialTabs
@{
    Layout = null;
    bool firstRound;
}

<div>
    <form method="get" action="">
        @{ firstRound = true; }
        @foreach (var tab in Model.Tabs)
        {
            @if (
                (string.IsNullOrEmpty(Model.SelectedTabId) && firstRound)
                || (!string.IsNullOrEmpty(Model.SelectedTabId) && (tab.Id == Model.SelectedTabId))
            )
            {
                    
                <span>@tab.Title</span>
            }
            else
            {
                @foreach (var entry in Model.HiddenNameActions)
                {
                    <input type="hidden" name="@entry.Key" value="@entry.Value"/>
                }
                <button type="submit" name="@Model.Identifier@nameof(Model.SelectedTabId)" value="@tab.Id">@tab.Title</button>
            }

            firstRound = false;
        }
    </form>
    @{ firstRound = true; }
    @foreach (var tabC in Model.Tabs)
    {
        @if (
            (string.IsNullOrEmpty(Model.SelectedTabId) && firstRound)
            || (!string.IsNullOrEmpty(Model.SelectedTabId) && (tabC.Id == Model.SelectedTabId))
        )
        {
            <div id="@Model.Identifier@tabC.Id" style="display: block;">
                @await Html.PartialAsync(tabC.View, tabC.ViewModel)
            </div>
        }
        else
        {
            // Skip content it does not need to be rendered
            <div id="@Model.Identifier@tabC.Id" style="display: none;">
                Loading ...
            </div>
        }
            
        firstRound = false;
    }
</div>
